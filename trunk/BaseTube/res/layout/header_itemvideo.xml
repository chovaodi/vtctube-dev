<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <com.vtc.basetube.font.TextViewRobotoLight
            android:id="@+id/lblName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:lineSpacingExtra="5dp"
            android:text="OMO Vé tết đoàn viên"
            android:textColor="@color/text_black"
            android:textSize="18dp" />

        <com.vtc.basetube.font.TextViewRobotoLight
            android:id="@+id/lblCountview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:lineSpacingExtra="5dp"
            android:text="30 Lượt xem."
            android:textColor="@color/text_black"
            android:textSize="14dp" />

        <com.vtc.basetube.font.TextViewRobotoLight
            android:id="@+id/TextViewRobotoLight03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:text="Xuất bản ngày 12-1-2015. Description"
            android:textColor="@color/text_black"
            android:textSize="14dp" />

        <com.vtc.basetube.font.TextViewRobotoLight
            android:id="@+id/lblTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:lines="1"
            android:text="* Giám đốc tổng biên tập: Đỗ Bích"
            android:textColor="@color/text_black"
            android:textSize="14dp" />

        <com.vtc.basetube.font.TextViewRobotoLight
            android:id="@+id/TextViewRobotoLight02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:lines="1"
            android:text="* Website: http://qtv.vn"
            android:textColor="@color/text_black"
            android:textSize="14dp" />

        <com.vtc.basetube.font.TextViewRobotoLight
            android:id="@+id/TextViewRobotoLight01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:lines="1"
            android:text="* Điện thoại: 033.3518752"
            android:textColor="@color/text_black"
            android:textSize="14dp" />
    </LinearLayout>

</LinearLayout>